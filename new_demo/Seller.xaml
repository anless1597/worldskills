<Window x:Class="new_demo.Seller"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:new_demo"
        mc:Ignorable="d"
        Title="Seller" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Margin="50 50 0 0">
            <Image x:Name="photo" Height="100" Width="100" />
            <StackPanel Orientation="Vertical" Margin="10 0 0 0 ">
                <TextBlock x:Name="fName" Text="First Name"/>
                <TextBlock x:Name="lName" Text="Last Name"/>
                <TextBlock x:Name="position" Text="Position" Margin="0 10 0 0"/>
            </StackPanel>
        </StackPanel>
            <Button Width="100"  Content="Create order" Click="Button_Click"/>
    </StackPanel>
</Window>
